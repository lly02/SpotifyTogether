{
    "manifest_version": 3,
    "name": "SpotifyTogether",
    "description": "Synchronize spotify sessions.",
    "version": "1.0",
    "action": {
        "default_popup": "./public/index.html"
    },
    "permissions": [
        "storage"
    ],
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    }
}